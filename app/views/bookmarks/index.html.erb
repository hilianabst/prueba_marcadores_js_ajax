<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>
<div class="mb-5">
<%= render 'form', bookmark: @bookmark %>
</div>

<table class="table table-bordered w-50 container " id="table_bookmarks">
  <thead>
    <tr class="bg-info text-light">
      <th>Name</th>
      <th>Url</th>
      <th>Kind</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <%= render @bookmarks%>
  </tbody>
</table>

<br>

<%= link_to 'New Bookmark', new_bookmark_path %>
